<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Module_Activity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".View.Patient_Activity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".View.Bilan_Activity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".View.Ergotherapeute_Activity"
            android:screenOrientation="landscape"></activity>

        <activity android:name=".View.Informations_Patient_Activity"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name=".View.MainActivity"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".View.Login_activity"

            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>