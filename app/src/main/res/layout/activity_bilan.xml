<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bilan_Activity">

    <include
        android:id="@+id/menu_gauche"
    layout="@layout/menu_gauche_activity_patient_et_bilan"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/menu_gauche">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="40dp"
            android:columnCount="2"
            android:rowCount="2">


            <include
                layout="@layout/module_handicap"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="40dp"/>

            <include
                layout="@layout/module_mode_de_vie"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <include
                layout="@layout/module_habitat"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <include
                layout="@layout/conclusion"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

        </GridLayout>



    </RelativeLayout>







</RelativeLayout>